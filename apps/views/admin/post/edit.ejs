<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../layout/head'); %>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>tinymce.init({selector:'textarea'});</script>
    <title>Sửa bài viết</title>
</head>
<body>
    <%- include('../layout/nav'); %>
    <div class="container">
        <h2 class="mt-3 mb-3">Edit post</h2>
        <%if(data && data.error){%>
          <div id="login-alert" class="alert alert-danger col-md-12"><%= data.error%></div>
          <%}%>
        <form method="" action="">
            <input type="hidden" class="id" name="id" value="<% if(data && data.post) {%><%= data.post.id %><%}%>">
            <div class="form-group">
              <label>Title</label>
              <input type="text" class="form-control title" name="title" placeholder="title" value="<% if(data && data.post) {%><%= data.post.title %><%}%>">
            </div>
            <div class="form-group">
              <label for="exampleFormControlTextarea1">Content</label>
              <textarea class="form-control" name="content" rows="3"><% if(data && data.post) {%><%= data.post.content %><%}%></textarea>
            </div>
            <div class="form-group">
                <label>Author</label>
                <input type="text" class="form-control author" name="author" placeholder="author" value="<% if(data && data.post) {%><%= data.post.author %><%}%>">
              </div>
              <input type="button" name="" value="Edit" class="btn btn-primary post_edit" />
          </form>
    </div>
    <script type="text/javascript" src="/static/js/post.js"></script>
</body>
</html>