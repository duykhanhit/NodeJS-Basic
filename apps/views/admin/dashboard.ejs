<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('layout/head'); %>
    <title>Dashboard</title>
</head>
<body>
    <%- include('layout/nav'); %>

    <div class="container">
        <div class="row mt-3 mb-3">
            <div class="col-md-12">
                <a  class="btn btn-success" href="/admin/post/new">Add new Post</a>
            </div>
        </div>
        <h2>Posts</h2>            
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Content</th>
              <th>Author</th>
              <th>Create time</th>
              <th>Update time</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if(data && data.posts) {%>
                <% for(var i = 0; i < data.posts.length; i++) {%>
                <tr>
                    <td> <%= data.posts[i].id %> </td>
                    <td> <%= data.posts[i].title %> </td>
                    <td> <%= data.posts[i].content %> </td>
                    <td> <%= data.posts[i].author %> </td>
                    <td> <%= data.posts[i].created_at %> </td>
                    <td> <%= data.posts[i].updated_at %> </td>
                    <td>
                        <a href="/admin/post/edit/<%= data.posts[i].id %>" class="btn btn-primary">Edit</a>
                        <button class="btn btn-success post_delete" post_id="<%= data.posts[i].id %>">Delete</button>
                    </td>
                </tr>
                <%}%>
            <%}%>
          </tbody>
        </table>
      </div>

      <script type="text/javascript" src="/static/js/post.js"></script>
</body>
</html>